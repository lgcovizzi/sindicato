APP_NAME="Sistema de Gest√£o Sindical"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000
APP_TIMEZONE=America/Sao_Paulo
APP_LOCALE=pt_BR
APP_FALLBACK_LOCALE=en

# Database Configuration
DB_CONNECTION=pgsql
DB_HOST=postgres
DB_PORT=5432
DB_DATABASE=sindicato_db
DB_USERNAME=sindicato_user
DB_PASSWORD=sindicato_password

# Redis Configuration
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_DB=0

# Cache Configuration
CACHE_DRIVER=redis
CACHE_PREFIX=sindicato_cache

# Session Configuration
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# Queue Configuration
QUEUE_CONNECTION=redis
QUEUE_PREFIX=sindicato_queue

# Broadcasting Configuration
BROADCAST_DRIVER=redis
BROADCAST_CONNECTION=default

# WebSocket Configuration
WEBSOCKETS_SSL_LOCAL_CERT=null
WEBSOCKETS_SSL_LOCAL_PK=null
WEBSOCKETS_SSL_PASSPHRASE=null

# JWT Configuration
JWT_SECRET=
JWT_TTL=60
JWT_REFRESH_TTL=20160
JWT_ALGO=HS256

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=mailhog
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@sindicato.com"
MAIL_FROM_NAME="${APP_NAME}"

# AWS Configuration (for production)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Pusher Configuration (alternative to Socket.io)
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=mt1

# Logging Configuration
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Filesystem Configuration
FILESYSTEM_DISK=local

# Biometric Authentication
BIOMETRIC_ENABLED=true
BIOMETRIC_TIMEOUT=300

# QR Code Configuration
QR_CODE_SIZE=300
QR_CODE_MARGIN=2
QR_CODE_FORMAT=png

# Geolocation Configuration
GEOLOCATION_ENABLED=true
GEOLOCATION_RADIUS=1000

# Notification Configuration
NOTIFICATION_CHANNELS=database,broadcast,mail
FCM_SERVER_KEY=
APNS_CERTIFICATE_PATH=
APNS_CERTIFICATE_PASSPHRASE=

# API Rate Limiting
API_RATE_LIMIT=60
API_RATE_LIMIT_WINDOW=1

# Security Configuration
SECURE_HEADERS=true
CSP_ENABLED=true
HSTS_ENABLED=true

# Development Tools
TELESCOPE_ENABLED=true
DEBUGBAR_ENABLED=true

# Testing Configuration
TEST_DATABASE=sindicato_test
TEST_REDIS_DB=1